<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:elevation="0dp"
        android:theme="@style/ToolBarTheme"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />


    <ScrollView xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="org.bbt.kiakoa.LendFormActivity">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="20dp"
                android:contentDescription="@string/item_description"
                android:src="@drawable/ic_description_24dp" />

            <EditText
                android:id="@+id/item"
                android:layout_gravity="fill_horizontal|center_vertical"
                android:layout_marginEnd="20dp"
                android:hint="@string/item"
                android:maxLines="1"
                android:inputType="text"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="20dp"
                android:contentDescription="@string/lend_date"
                android:src="@drawable/ic_event_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|fill_horizontal|fill_vertical"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="20dp"
                android:gravity="center_vertical"
                android:hint="@string/lend_date"
                android:text="@string/lend_date"/>

        </GridLayout>

    </ScrollView>
</LinearLayout>
