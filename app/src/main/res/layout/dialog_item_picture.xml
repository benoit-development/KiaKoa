<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:alignmentMode="alignBounds"
    android:columnCount="3"
    android:padding="10dp"
    android:baselineAligned="false">

    <RelativeLayout
        android:id="@+id/camera_button_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <View
            android:id="@+id/image_camera"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/badge_background_clickable" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:alpha="@integer/icon_alpha"
            android:contentDescription="@string/take_picture"
            android:padding="15dp"
            android:src="@drawable/clipart_camera"
            android:tint="@color/colorBadgeContent" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_camera"
            android:text="@string/take_picture"
            android:gravity="center"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <View
            android:id="@+id/image_gallery"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/badge_background_clickable" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:alpha="@integer/icon_alpha"
            android:contentDescription="@string/pick_image"
            android:padding="15dp"
            android:src="@drawable/ic_photo_gallery_24dp"
            android:tint="@color/colorBadgeContent" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_gallery"
            android:text="@string/pick_image"
            android:gravity="center"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <View
            android:id="@+id/image_clipart"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/badge_background_clickable" />

        <GridLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:columnCount="3"
            android:layout_centerHorizontal="true"
            android:useDefaultMargins="true">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:alpha="@integer/icon_alpha"
                android:contentDescription="@string/pick_clipart"
                android:src="@drawable/clipart_book"
                android:tint="@color/colorBadgeContent"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:alpha="@integer/icon_alpha"
                android:contentDescription="@string/pick_clipart"
                android:src="@drawable/clipart_money"
                android:tint="@color/colorBadgeContent"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:alpha="@integer/icon_alpha"
                android:contentDescription="@string/pick_clipart"
                android:src="@drawable/clipart_bar"
                android:tint="@color/colorBadgeContent"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:alpha="@integer/icon_alpha"
                android:contentDescription="@string/pick_clipart"
                android:src="@drawable/clipart_bike"
                android:tint="@color/colorBadgeContent"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:alpha="@integer/icon_alpha"
                android:contentDescription="@string/pick_clipart"
                android:src="@drawable/clipart_game"
                android:tint="@color/colorBadgeContent"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:alpha="@integer/icon_alpha"
                android:contentDescription="@string/pick_clipart"
                android:src="@drawable/clipart_key"
                android:tint="@color/colorBadgeContent"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:alpha="@integer/icon_alpha"
                android:contentDescription="@string/pick_clipart"
                android:src="@drawable/clipart_movie"
                android:tint="@color/colorBadgeContent"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:alpha="@integer/icon_alpha"
                android:contentDescription="@string/pick_clipart"
                android:src="@drawable/clipart_music"
                android:tint="@color/colorBadgeContent"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:alpha="@integer/icon_alpha"
                android:contentDescription="@string/pick_clipart"
                android:src="@drawable/clipart_pet"
                android:tint="@color/colorBadgeContent"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"/>

        </GridLayout>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_clipart"
            android:text="@string/pick_clipart"
            android:gravity="center"/>

    </RelativeLayout>

</LinearLayout>